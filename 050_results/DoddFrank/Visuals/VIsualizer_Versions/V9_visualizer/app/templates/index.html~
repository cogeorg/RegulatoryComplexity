<!-- Buttons -->
<script type="text/javascript">

// Classification
function surroundSelection(type) {
    var selection = window.getSelection().getRangeAt(0);
    var selectedText = selection.extractContents();
    var span = document.createElement("span");
    span.setAttribute("class",type)
    span.appendChild(selectedText);
    span.oncontextmenu = function (ev) {
        this.parentNode.insertBefore(document.createTextNode(this.innerHTML), this);
        this.parentNode.removeChild(this);
    }
    selection.insertNode(span);

}
    

</script>

<div class = "buttons">
    <ul>
        <form>
            <input id= "A-Antecedent" type="button" onclick="surroundSelection('A-Antecedent')" value="A-Antecedent">
